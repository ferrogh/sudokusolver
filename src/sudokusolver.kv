#:import SelectButton src.gui.SelectButton
#:import SudokuButton src.gui.SudokuButton
#:import SelectPopup src.gui.SelectPopup
#:import partial functools.partial

<SelectButton, SudokuButton>:
    text: self.value if self.value else ''
    size_hint: (1, 1)

<SelectPopup>:
    MDGridLayout:
        cols: 4
        on_parent:
            for i in range(1, 17): \
            btn = SelectButton(value=str(i)); \
            btn.bind(on_press=partial(root.select, str(i))); \
            self.add_widget(btn)

<Sudoku>:
    MDBoxLayout:
        orientation: "vertical"
        MDGridLayout:
            id: board
            size_hint: (1, 1)
            cols: 4

            on_parent:
                for i in range(16): self.add_widget(SudokuButton())

        MDRaisedButton:
            size_hint: (1, 0.2)
            text: "Solve!"
            on_press: root.print()



